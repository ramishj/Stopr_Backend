{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@/*": ["./"]
    },
    "outDir": "./dist",
    "incremental": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["./node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
